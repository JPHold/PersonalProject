<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearL_phoneCall_secondSetting_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.hjp.mobilesafe.customview.SingleLineSelectLayout
        android:id="@+id/secondSetting_singleLSLayout_phoneCall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFF"
        app:mainTitle="来电显示" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimary" />

    <com.hjp.mobilesafe.customview.SingleLineSelectLayout
        android:id="@+id/secondSetting_singleLSLayout_phoneCall_phoneSource_showStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFF"
        app:mainTitle="号码来源的提示颜色" />
</LinearLayout>