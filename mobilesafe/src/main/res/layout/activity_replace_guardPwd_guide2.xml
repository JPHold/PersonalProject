<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textV_guardPwd_guide2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.hjp.mobilesafe.customview.SingleLineSelectLayout
            android:id="@+id/guardPwd_guide2_settingStateLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:mainTitle="点击绑定sim卡"

            android:background="@color/colorPrimary"/>

        <include
            android:id="@+id/guardPwd_guide2_backAndNextBtn"
            layout="@layout/common_guardpwd_guide" />
    </LinearLayout>

</ScrollView>