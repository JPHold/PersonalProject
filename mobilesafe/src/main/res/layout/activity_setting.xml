<?xml version="1.0" encoding="utf-8"?>
<!--留着ScrollView的id，是为了比较setContentView()和ScrollView.addView(),哪种方式消耗大-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingActivity_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjp.mobilesafe.customview.SingleLineSelectLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:mainTitle="" />

        <com.hjp.mobilesafe.customview.SingleLineSelectLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:mainTitle="" />

        <com.hjp.mobilesafe.customview.SingleLineSelectLayout
            android:id="@+id/setting_singleLSLayout_phoneCall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:mainTitle="来电显示设置" />

        <com.hjp.mobilesafe.customview.SingleLineSelectLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:mainTitle="" />

    </LinearLayout>

</ScrollView>